@model List<BookStoreReadModels.Models.InvoiceReport>
@{
    ViewBag.Title = "Book Store";
}
<script src="../../Scripts/invoice/Invoice.js"></script>
<h2>@ViewBag.Message</h2>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Add Item</h4>
            </div>
            <div class="modal-body" style="padding-bottom: 125px">
                <div class="col-xs-12">
                    <div class="col-xs-4">
                        Nama :
                    </div>
                    <div class="col-xs-8">
                        <input id="itemName" name="name" type="text" />
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="col-xs-4">
                        Barcode :
                    </div>
                    <div class="col-xs-8">
                        <input id="barcode" name="barcode" type="text" />
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="col-xs-4">
                        Qty :
                    </div>
                    <div class="col-xs-8">
                        <input id="qty" name="qty" type="number" />
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="col-xs-4">
                        Price :
                    </div>
                    <div class="col-xs-8">
                        <input id="price" name="price" type="number" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close</button>
                <button type="submit" class="btn btn-success btn-itemSave">
                    Save</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="qtyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Ubah Qty</h4>
            </div>
            <div class="modal-body">
                <div>
                    Qty :
                    <input id="modalQty" name="qty" type="number" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close</button>
                <button type="submit" class="btn btn-success btn-qtySave">
                    Save</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="dateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Ubah Tanggal</h4>
            </div>
            <div class="modal-body">
                <div>
                    Tanggal :
                    <input id="modalDate" name="date" type="text" placeholder="dd-mm-yyyy" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close</button>
                <button type="submit" class="btn btn-success btn-dateSave">
                    Save</button>
            </div>
        </div>
    </div>
</div>
<div id="listInvoice">
    <form>
        Customer :
    <input name="name" type="text" />
        <button type="submit" class="btn btn-sm
btn-success btn-invoice">
            Submit</button>
    </form>
    <p>
        <div class="results">
            <div class="row-greeting">
                <table class="table">
                    <thead>
                     <tr>
                        <th>No Transaksi
                        </th>
                        <th>Nama Customer
                        </th>
                        <th>Termin
                        </th>
                        <th>Tanggal Transaksi
                        </th>
                        <th>Tanggal Jatuh Tempo
                        </th>
                        <th class="text-right">Sub Total
                        </th>
                        <th class="text-right">Net Total
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody table3>
                </tbody>
                </table>
            </div>
        </div>
    </p>
</div>
<div id="invoice" hidden>
    <div class="invoiceHeader">
        <div class="headerRight col-xs-8">
            <div id="invId">
            </div>
            <div id="invNo">
                No Transaksi :
            </div>
            <div id="custName">
                Nama Pelanggan :
            </div>
            <div id="custAddress">
                Alamat Pelanggan :
            </div>
        </div>
        <div class="headerLeft col-xs-4">
            <div id="transactionDate" style="display: inline-block">
                Tanggal Transaksi :
            </div>
            <button class="btn-date">
                Edit</button>
            <div>
            </div>
            <div id="dueDate">
                Tanggal Jatuh Tempo :
            </div>
        </div>
    </div>
    <div class="items">
        <div>
            <button class="btn btn-sm btn-success btn-item" data-toogle="modal" data-target="#myModal">
                Add Item</button>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nama Item
                        </th>
                        <th>Barcode
                        </th>
                        <th class="text-right">Qty
                        </th>
                        <th class="text-right">Price
                        </th>
                        <th class="text-right">Total
                        </th>
                    </tr>
                </thead>
                <tbody table2>
                </tbody>
            </table>
        </div>
    </div>
    <div class="invoiceFooter">
        <div id="subTotal">
            Sub Total :
        </div>
        <div id="netTotal">
            Net Total :
        </div>
    </div>
</div>
